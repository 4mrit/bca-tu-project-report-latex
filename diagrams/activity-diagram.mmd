flowchart TD
    start --> addToCart
    addToCart --> reviewCart
    reviewCart --> proceedToCheckout
    proceedToCheckout --> paymentProcessing
    paymentProcessing --> paymentDecision{Payment Successful?}
    paymentDecision -- yes --> orderConfirmation
    orderConfirmation --> inventoryUpdate
    inventoryUpdate --> sendNotification
    sendNotification --> stop
    paymentDecision -- no --> paymentFailed
    paymentFailed --> retryPayment
    retryPayment --> stop

